<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_grey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/MyHabitatTitle"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            android:textAlignment="center">

        </TextView>

        <TextView
            android:id="@+id/iConsomationPerso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 W"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:layout_marginTop="50dp"
            android:textAlignment="center">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp">

            <View
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Equipements"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textAlignment="center">
            </TextView>

            <View
                android:layout_width="250dp"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_gravity="center"/>


        </LinearLayout>

        <ListView
            android:id="@+id/myhabitatlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="140dp">
        </ListView>

        <Button
            android:id="@+id/addAnAppliance"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/AddEquipement"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp"/>

        <Button
            android:id="@+id/reserveCreneau"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/Reserver"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>